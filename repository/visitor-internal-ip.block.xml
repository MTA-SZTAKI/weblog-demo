<?xml version="1.0" encoding="UTF-8"?>
<block-package xmlns="urn:hu.sztaki.ilab.longneck:1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- A client is considered internal if its IP address is the Aegon global web proxy -->
  <block id="visitor-internal-ip.aegon" version="1.0">
    <if>
      <equals apply-to="visitorIpAddress" value="195.228.142.2"/>
      <then>
        <set apply-to="visitorIpInternal" value="Y"/>
      </then>
      <else>
        <set apply-to="visitorIpInternal" value="N"/>
      </else>
    </if>
  </block>

</block-package>